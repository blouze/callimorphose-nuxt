{
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "5.14.0",
    "@sanity/client": "1.150.7",
    "@sanity/image-url": "0.140.19",
    "groq": "1.150.1",
    "nuxt": "2.14.5",
    "nuxt-buefy": "0.4.3",
    "nuxt-fontawesome": "0.4.0",
    "nuxt-stack": "0.8.1",
    "vue-template-compiler": "2.6.12",
    "vuelidate": "0.7.5"
  },
  "scripts": {
    "dev": "nuxt",
    "clean": "nuxt clean",
    "serve": "nuxt serve",
    "start": "nuxt start",
    "stats": "nuxt stats",
    "build": "nuxt build --modern=server",
    "generate": "nuxt generate --modern=client",
    "format": "nuxt format --write --lint '*.{md}' 'src/**/*.{js,json,scss,vue}'",
    "lint": "nuxt lint . --fix",
    "test": "nuxt test",
    "commit": "commit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "nuxt format --write --lint",
      "nuxt lint --fix",
      "nuxt test --related",
      "git add"
    ],
    "src/**/*.{html,json,scss}": [
      "nuxt format --write",
      "git add"
    ],
    "*.{md}": [
      "nuxt format --write",
      "git add"
    ]
  }
}
